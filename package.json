{
  "name": "russian",
  "version": "1.0.0",
  "description": "Flash card app for learning Russian",
  "main": "index.js",
  "repository": "git@github.com:dbrudnicki/russian.git",
  "author": "David Brudnicki <davidbrudnicki@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "parcel public/index.html --open",
    "clean": "rm -rf .cache & rm -rf dist",
    "build": "docker rmi -f dbrudnicki/russian && rm -rf build && parcel build public/index.html --out-dir build && docker build --no-cache -t dbrudnicki/russian ."
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "i18next": "^17.0.13",
    "i18next-browser-languagedetector": "^3.0.3",
    "react": "^16.9.0",
    "react-app-polyfill": "^1.0.2",
    "react-dom": "^16.9.0",
    "react-i18next": "^10.12.2",
    "react-router-dom": "^5.0.1",
    "reactstrap": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@hot-loader/react-dom": "^16.9.0",
    "@testing-library/react": "^9.1.4",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "bootstrap": "^4.3.1",
    "eslint": "^6.3.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "parcel-bundler": "^1.12.3",
    "react-hot-loader": "^4.12.12",
    "sass": "^1.23.0-module.beta.1"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-flow",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-flow-strip-types",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragmaFrag": "React.Fragment"
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "jsxBracketSameLine": true
  },
  "browserslist": [
    ">0.25%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
